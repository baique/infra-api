pipeline {
    agent {
        docker {
            image 'docker-proxy.hljzj.tech/maven:3.8.5-openjdk-17-slim'
            args '-v /home/.m2:/root/.m2 -v /home/maven/settings.xml:/usr/share/maven/ref/'
        }
    }
    stages {
        stage('Build') {
            steps {
                sh 'mvn -DskipTests clean package'
            }
        }
    }
}